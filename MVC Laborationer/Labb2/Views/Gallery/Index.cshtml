@model IList<Labb2.Models.Photo>

@{
    ViewBag.Title = "Gallery";
}
@section featured{

    <div style="margin-left: 88%">
        <h3>Recent Uploads</h3>
        @{
            Html.RenderAction("RecentUpload");
        }
    </div>
}


<h2>Gallery</h2>
<div class="container-fluid">
    <div style="margin-bottom: 40px">
        @Html.ActionLink("Upload", "UploadPhoto", "Gallery", new {@class = "navbar-brand"})
    </div>
    <br/>
    <br/>

    <div style="margin-top: 40px">
        @foreach(var photo in Model)
        {
            
            <a href='@Url.Action("ShowImage", "Gallery", new {id = photo.PhotoId}, null)'>
                <img src="@Url.Content(photo.PhotoUrl)"alt="Image From Folder" style="max-width: 100%; max-height:300px"/>
            </a>
        }
    </div>
</div>

