
@model IList<Labb2.Models.Album>

@{
    ViewBag.Title = "Gallery";
}
@section featured{

    <div style="margin-left: 88%">
        <h3>Recent Uploads</h3>
        @{
            Html.RenderAction("RecentUpload");
        }
    </div>
}


<h2>Gallery</h2>
<div class="container-fluid">
    <div style="margin-top: 40px">
        @foreach (var album in Model)
        {
            <a href='@Url.Action("ViewAlbum", "Album", new {id = album.AlbumId}, null)'>
                @Html.ActionLink(@album.AlbumName, "ViewAlbum", "Album", new { id = album.AlbumId }, new { @class = "navbar-brand" })
            </a>
        }
    </div>

