@model IEnumerable<Labb2.Models.Comment>


<div id="del">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommentComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteComment", "Comment", new { commentId = item.CommentId, photoId = item.PhotoId },new { data_commentId = item.CommentId, data_photoId = item.PhotoId, id = "DeleteButton" })
                </td>

            </tr>
        }

    </table>
    <script src="~/scripts/DeleteComment.js"></script>
</div>
